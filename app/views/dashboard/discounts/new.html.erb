<%= form_for @discount, url: dashboard_discounts_path do |f| %>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :minimum_quantity %>
    <%= f.number_field :minimum_quantity %>
  </p>

  <p>
    <%= f.label :discount_amount %>
    <%= f.number_field :discount_amount %>
  </p>

  <%= f.submit %>
<% end %>
